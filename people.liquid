---
title: People | NuMat
layout: default
permalink: /people/
---

{% assign header = site.data.people.header %}
<div class="front" style="background-color: {{ header.color }};
                          background-image: url(../img/{{ header.background }});">
  <div class="vertical-center-table">
    <div class="banner banner-full">
      <h1>{{ header.title }}</h1>
      <p>{{ header.description }}</p>
    </div>
  </div>
  <a href="#people" class="scroll-button"><i class="fa fa-chevron-down"></i></a>
</div>

<div class="container" id="people">
  <div class="top-row"></div>

  {% for group in site.data.people.groups %}

  {% if group.name != "Team" %}
  <div class="row">
    <div class="col-lg-12">
      <h2 class="page-header">{{ group.name }}</h2>
    </div>
  </div>
  {% endif %}

  <div class="row people">
  {% for member in group.members %}
    <div class="col-sm-6">
      <h3>{{ member.name }}</h3>
      <p class="role">{{ member.position }}</p>
      <p class="role">
        {% if member.linkedin %}
          <a href="{{ member.linkedin }}" target="_blank"><i class="fa fa-linkedin-square"></i></a>
        {% endif %}
        {% if member.github %}
          <a href="http://github.com/{{ member.github }}" target="_blank"><i class="fa fa-github"></i></a>
        {% endif %}
        {% if member.email %}
          <a href="mailto:{{ member.email }}" target="_blank"><i class="fa fa-envelope"></i></a>
        {% endif %}
      </p>
      {{ member.description | markdownify }}
      <hr>
      <p>{{ member.education }}</p>
    </div>
    {% capture mod %}{{ forloop.index | modulo:2 }}{% endcapture %}
    {% if mod == "0" %}
      </div><div class="row people">
    {% endif %}
  {% endfor %}
  </div>
  {% endfor %}
</div>
